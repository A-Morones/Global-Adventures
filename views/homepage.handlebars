   <main class="container mt-5">
        <!-- Carousel for Traveling Pictures -->
        <div id="travelCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/public/images/edgar-chaparro-6ccJQ5qPFvY-unsplash.jpg" class="d-block w-100" alt="Travel Image 1">
                </div>
                <div class="carousel-item">
                    <img src="/public/images/eric-marty-IZunjrb3soo-unsplash.jpg" class="d-block w-100" alt="Travel Image 2">
                </div>
                <div class="carousel-item">
                    <img src="/public/images/fabio-comparelli-uq2E2V4LhCY-unsplash.jpg" class="d-block w-100" alt="Travel Image 3">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#travelCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#travelCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <!-- Top Travel Discussions -->
        <h2 class="mb-4">Top Travel Discussions</h2>
        <div class="row">
            {{#each threads}}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="/images/{{this.image}}" class="card-img-top" alt="Travel Image">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">{{this.preview}}</p>
                        <a href="/threads/{{this.id}}" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </main>