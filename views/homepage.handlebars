 <main class="container mt-4">
        <div class="row">
            <!-- Recent Threads Section -->
            <div class="col-md-8">
                <h2>Recent Threads</h2>
                {{#if threads.length}}
                <ul class="list-group">
                    {{#each threads}}
                    <li class="list-group-item">
                        <h4><a href="/threads/{{this.id}}">{{this.title}}</a></h4>
                        <p>{{this.preview}}</p>
                        <small>Posted by {{this.user.username}} on {{this.createdAt}}</small>
                    </li>
                    {{/each}}
                </ul>
                {{else}}
                <p>No threads available. <a href="/new">Create a new thread</a></p>
                {{/if}}
            </div>

            <!-- Sidebar Section -->
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h3>Featured Discussion</h3>
                    </div>
                    <div class="card-body">
                        <!-- Example featured thread -->
                        <h4><a href="/threads/{{featuredThread.id}}">{{featuredThread.title}}</a></h4>
                        <p>{{featuredThread.preview}}</p>
                        <small>Posted by {{featuredThread.user.username}} on {{featuredThread.createdAt}}</small>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h3>Categories</h3>
                    </div>
                    <ul class="list-group list-group-flush">
                        {{#each categories}}
                        <li class="list-group-item">
                            <a href="/categories/{{this.id}}">{{this.name}}</a>
                        </li>
                        {{/each}}
                    </ul>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h3>User Statistics</h3>
                    </div>
                    <div class="card-body">
                        <p>Total Users: {{userStats.totalUsers}}</p>
                        <p>Total Threads: {{userStats.totalThreads}}</p>
                        <p>Total Comments: {{userStats.totalComments}}</p>
                    </div>
                </div>
            </div>
        </div>
    </main>