{{!-- newThread.handlebars --}}
{{#extends 'main'}}

{{#block 'body'}}
<div class="container">
    <h2>Create a New Thread</h2>
    <form action="/threads/new" method="POST">
        <div class="form-group">
            <label for="title">Thread Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Enter thread title" required>
        </div>
        <div class="form-group">
            <label for="body">Thread Content</label>
            <textarea class="form-control" id="body" name="body" rows="5" placeholder="Enter your content" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Create Thread</button>
    </form>
</div>
{{/block}}